  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch program with gdb",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/mandelbrot",
      "args": [
				"out.png",
				"1920",
				"1080",
				"0",
				"0",
				"200",
				"2000",
				"2"
			],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}